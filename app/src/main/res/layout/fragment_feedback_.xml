<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Feedback"
             android:textSize="30dp"
            android:layout_marginLeft="130dp"
               />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/txt1"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:paddingLeft="5dp"
                android:text="Overall Satisfaction"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/star_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <RatingBar

                android:id="@+id/satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:stepSize="1"
                android:numStars="5" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="top"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="Trust and confidence"
                android:textSize="30dp" />

            <LinearLayout
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <RatingBar
                android:id="@+id/confidance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:stepSize="1"

                android:numStars="5" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="80dp"
                android:paddingLeft="5dp"
                android:text="Quality of service"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/star_line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <RatingBar
                android:id="@+id/quality_of_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:stepSize="1"
                android:rating="0"
                android:layout_marginTop="35dp"
                android:numStars="5"
                 />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="5dp"
                android:text="Fairness of investigation"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/star_line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <RatingBar
                android:id="@+id/fairness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:stepSize="1"
                android:rating="0"
                android:numStars="5" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="top"
                android:layout_marginLeft="20dp"
                android:paddingLeft="5dp"

                android:layout_marginTop="5dp"
                android:text="Time taken to resoive complaint"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/star_line5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <RatingBar
                android:id="@+id/time_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:stepSize="1"
                android:rating="0"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="top"
                android:layout_marginLeft="100dp"
                android:paddingLeft="5dp"
                android:text="Asked for brife"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/star_line6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

            <EditText
                android:id="@+id/bribe_descryption"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                 android:ems="10"
                android:layout_marginTop="40dp"
                android:inputType="text"
                android:hint="If yes,Howmuch"
                android:background="@drawable/d1"/>


        </androidx.cardview.widget.CardView>

          <Button
              android:layout_marginTop="10dp"
              android:id="@+id/submit_feedback"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Feedback"
              android:textSize="30dp"
              android:layout_marginLeft="100dp"
              />

    </LinearLayout>
</ScrollView>
